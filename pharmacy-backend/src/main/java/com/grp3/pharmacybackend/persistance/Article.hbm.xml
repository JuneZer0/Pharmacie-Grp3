<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Article" table = "article">
      
      <meta attribute = "class-description">
         This class contains the article detail. 
      </meta>
      
      <id name = "id" type = "int" column = "id" strategy = "Generated.IDENTITY">
         <generator class="native"/>
      </id>
      
      <property name = "articleBarcode" column = "barcode" type = "long"/>
      <property name = "articleName" column = "name" type = "string"/>
      <property name = "articleQuantity" column = "quantity" type = "int"/>
      <property name = "articlePrice" column = "price" type = "int"/>
      
   </class>
</hibernate-mapping>